    <script>
        document.querySelectorAll('.text-link').forEach(link => {
            link.addEventListener('click', function() {
                const target = document.querySelector(this.getAttribute('href'));
                target.style.display = target.style.display === 'none' ? 'block' : 'none';
            });
        });
    </script>

